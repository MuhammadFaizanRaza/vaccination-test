{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "lib": ["ES2019"],
    "outDir": "dist",
    "baseUrl": "src",
    "strict": true,
    "incremental": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true
  }
}
